{
  "name": "flipbook-server",
  "version": "1.0.0",
  "description": "Backend server for Flipbook e-book reader",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@prisma/client": "^6.0.0",
    "@sentry/node": "^9.47.1",
    "bcrypt": "^5.1.0",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "csrf-csrf": "^4.0.3",
    "express": "^5.0.1",
    "express-rate-limit": "^7.0.0",
    "express-session": "^1.18.0",
    "helmet": "^8.0.0",
    "jsdom": "^28.1.0",
    "jszip": "^3.10.1",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pino": "^9.0.0",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/connect-pg-simple": "^7.0.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.0",
    "@types/jsdom": "^28.0.0",
    "@types/multer": "^1.4.0",
    "@types/passport": "^1.0.0",
    "@types/passport-google-oauth20": "^2.0.0",
    "@types/passport-local": "^1.0.0",
    "@types/supertest": "^6.0.0",
    "prisma": "^6.0.0",
    "supertest": "^7.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  }
}
