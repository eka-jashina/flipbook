{
  "name": "book-reader",
  "version": "1.0.0",
  "type": "module",
  "description": "Interactive book reader with page flip animations",
  "author": "Ekaterina Yashina",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eka-jashina/book-reader.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "build:prod": "npm run clean && vite build",
    "build:analyze": "vite build --mode analyze",
    "serve": "npx serve dist -s",
    "deploy": "npm run build:prod && npm run deploy:netlify",
    "deploy:netlify": "netlify deploy --prod --dir=dist",
    "deploy:vercel": "vercel --prod",
    "size": "du -sh dist/*",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint js/",
    "lint:css": "stylelint \"css/**/*.css\"",
    "lint:js:fix": "eslint js/ --fix",
    "lint:css:fix": "stylelint \"css/**/*.css\" --fix",
    "docs": "jsdoc -c jsdoc.json",
    "docs:serve": "npm run docs && npx serve docs -p 3001"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.1",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.16",
    "clean-jsdoc-theme": "^4.3.0",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "jsdoc": "^4.0.4",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.32",
    "sharp": "^0.34.5",
    "stylelint": "^17.1.1",
    "stylelint-config-standard": "^40.0.0",
    "svgo": "^4.0.0",
    "terser": "^5.26.0",
    "vite": "^5.0.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-image-optimizer": "^2.0.3",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions",
    "not dead",
    "not IE 11"
  ],
  "keywords": [
    "book-reader",
    "ebook",
    "page-flip",
    "3d-animation",
    "interactive",
    "reading"
  ],
  "dependencies": {
    "dompurify": "^3.3.1",
    "jszip": "^3.10.1"
  }
}
